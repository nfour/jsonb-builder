{
    "name"        : "jsonb-builder",
    "version"     : "0.1.0",
    "description" : "Converts JS structures to jsonb lookups for postgres",
    "keywords"    : [
        "postgres", "jsonb", "builder", "query", "pg"
    ],

    "scripts": {
        "test": "nyc --require babel-register mocha -G -w $(find . -name '*.spec.js' -not -path '*/node_modules/*')"
    },

    "main": "./JsonbBuilder",

    "dependencies": {
        "transposer" : "~0.3.0",
        "lutils"   : "~1.0.0"
    },

    "devDependencies": {
        "babel-loader"                                    : "~6.2.0",
        "babel-core"                                      : "~6.6.0",
        "babel-register"                                  : "~6.6.0",
        "babel-preset-es2015"                             : "^6.0.0",
        "babel-polyfill"                                  : "latest",
        "babel-plugin-transform-async-to-module-method"   : "latest",
        "babel-plugin-transform-class-properties"         : "latest",
        "babel-plugin-transform-object-rest-spread"       : "latest",
        "babel-plugin-transform-object-assign"            : "latest",
        "babel-plugin-add-module-exports"                 : "~0.1.0",

        "eslint"        : "~2.7.0",
        "babel-eslint"  : "~6.0.2",

        "nyc"   : "~6.2.1",
        "mocha" : "~2.4.5",
        "chai"  : "~3.5.0"
    }
}
